extends ../layouts/authentication.pug

block config
    - var pageTitle = 'Create or Join Organization'
    - var footerStyle = 'sb-footer-dark'

block content
    .container
        .row.justify-content-center
            // Create Organization
            .col-xl-4.col-lg-6.col-md-8.col-sm-11
                .card.mt-5
                    .card-body.px-5.pt-5.text-center
                        .h3.text-primary.font-weight-300 Create
                        p.text-muted Create an organization and invite new members
                        .sb-icons-org-create.align-items-center.mx-auto
                            i.sb-icon-users(data-feather='users')
                            i.sb-icon-plus.fas.fa-plus
                    hr.my-0
                    .card-body.px-5.py-4
                        .small.text-center
                            a.btn.btn-block.btn-primary(href="multi-tenant-create.html") Create new organization
            // Join Organization
            .col-xl-4.col-lg-6.col-md-8.col-sm-11
                .card.mt-5
                    .card-body.px-5.pt-5.text-center
                        .h3.text-secondary.font-weight-300 Join
                        p.text-muted Enter an access code or request access to an existing organization
                        .sb-icons-org-join.align-items-center.mx-auto
                            i.sb-icon-user(data-feather='user')
                            i.sb-icon-arrow.fas.fa-long-arrow-alt-right
                            i.sb-icon-users(data-feather='users')
                    hr.my-0
                    .card-body.px-5.py-4
                        .small.text-center
                            a.btn.btn-block.btn-secondary(href="multi-tenant-join.html") Join an organization
